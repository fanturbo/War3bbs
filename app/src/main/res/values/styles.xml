<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="NightTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/umeng_comm_white_color</item>
        <item name="colorPrimaryDark">@color/umeng_comm_black_color</item>
        <item name="colorAccent">@color/umeng_comm_feed_detail_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
