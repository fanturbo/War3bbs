<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/umeng_comm_topic_search_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/default_background_color"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!-- title -->
    <RelativeLayout
        android:id="@+id/umeng_comm_topic_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/umeng_comm_topic_edittext"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="66dp"
            android:background="#00000000"
            android:hint="搜索话题"
            android:imeOptions="actionSearch"
            android:paddingLeft="45dp"
            android:singleLine="true"
            android:textColor="@color/umeng_comm_black_color"
            android:textColorHint="#94989D"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="66dp"
            android:background="@color/umeng_comm_feed_detail_blue" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignLeft="@id/umeng_comm_topic_edittext"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/umeng_comm_search" />


        <Button
            android:id="@+id/umeng_comm_back"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/umeng_comm_black_color"
            android:textSize="15sp" />
        <Button
            android:id="@+id/umeng_comm_topic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/umeng_comm_search_button_style"
            android:text="@string/umeng_comm_search_key"
            android:textColor="?attr/umeng_comm_search_default_text"
            android:textSize="@dimen/text_big16_size"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/umeng_comm_divide_line" />

</LinearLayout>